{
    // Используйте IntelliSense, чтобы узнать о возможных атрибутах.
    // Наведите указатель мыши, чтобы просмотреть описания существующих атрибутов.
    // Для получения дополнительной информации посетите: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++.exe - Сборка и отладка активного файла",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": ["tinyxml2.cpp", "level.cpp", "enemy.cpp", "lvls.cpp", "v.cpp"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "env": {
                "Path": "C:/mingw32/bin;C:/SFML-2.5.1/bin"
            },
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\mingw32\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe сборка активного файла"
        }
    ]
}